<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/assembly/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0750</fileMode>
            <directoryMode>0750</directoryMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/assembly/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/ui/static</directory>
            <outputDirectory>ui</outputDirectory>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <fileMode>0640</fileMode>
            <directoryMode>0750</directoryMode>
            <excludes>
                <exclude>${project.groupId}:vstocks-ui</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
